# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
max_line_length = 145
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,aidl,kt,kts,gradle}]
indent_style = space
indent_size = 4

[*.{js,go,c,cpp}]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4

[*.{yaml,yml,xml}]
indent_style = space
indent_size = 4

[*.tmpl]
indent_style = tab
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{sh,bat}]
indent_style = tab
indent_size = 4

[*.bat]
end_of_line = crlf

